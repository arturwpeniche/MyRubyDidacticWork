<h1>New item</h1>
<%= form_for Item.new, url: {action: :create} do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
<p>
    <%= f.label :brand %><br>
    <%= f.text_area :brand %>
  </p>
 

  <p>
    <%= f.label :type %><br>
    <%= f.text_area :tipo %>
  </p>
 <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
<p>
    <%= f.label :stock %><br>
    <%= f.text_area :stock %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', items_path %>
